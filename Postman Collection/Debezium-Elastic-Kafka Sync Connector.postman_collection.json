	"item": [
		{
			"name": "Add Connector for MSSQL",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\": \"elastic-error-connector\",\r\n    \"config\": {\r\n        \"connector.class\": \"io.debezium.connector.sqlserver.SqlServerConnector\",\r\n        \"tasks.max\": \"1\",\r\n        \"database.hostname\": \"sqlserver\",\r\n        \"database.port\": \"1433\",\r\n        \"database.user\": \"sa\",\r\n        \"database.password\": \"Password123321\",\r\n        \"database.names\": \"DebeziumElasticTest\",\r\n        \"topic.prefix\": \"db-logs\", \r\n        \"table.include.list\": \"dbo.ErrorLog\", \r\n        \"schema.history.internal.kafka.bootstrap.servers\": \"kafka:9092\", \r\n        \"schema.history.internal.kafka.topic\": \"error-logs\",\r\n        \"database.encrypt\": \"false\",\r\n        \"time.precision.mode\": \"connect\",\r\n        \"transforms\": \"unwrap,errordate\",\r\n        \"transforms.unwrap.type\": \"io.debezium.transforms.ExtractNewRecordState\",\r\n        \"transforms.unwrap.drop.tombstones\": true,\r\n        \"transforms.unwrap.add.fields\": \"op,table\",\r\n        \"transforms.unwrap.delete.handling.mode\": \"rewrite\",\r\n        \"transforms.errordate.type\": \"org.apache.kafka.connect.transforms.TimestampConverter$Value\",\r\n        \"transforms.errordate.target.type\": \"string\",\r\n        \"transforms.errordate.field\": \"ErrorDate\",\r\n        \"transforms.errordate.format\": \"yyyy-MM-dd'T'HH:mm:ss\",\r\n        \"snapshot.mode\": \"schema_only\"\r\n    }\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://localhost:8083/connectors",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8083",
					"path": [
						"connectors"
					]
				}
			},
			"response": []
		},
		{
			"name": "Add Connector for Elastic Sync",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"name\": \"elastic-sink\",\r\n    \"config\": {\r\n        \"connector.class\": \"io.confluent.connect.elasticsearch.ElasticsearchSinkConnector\",\r\n        \"tasks.max\": \"1\",\r\n        \"topics\": \"db-logs.DebeziumElasticTest.dbo.ErrorLog\",\r\n        \"connection.url\": \"http://elasticsearch:9200\",\r\n        \"key.converter\": \"org.apache.kafka.connect.json.JsonConverter\",\r\n        \"key.converter.schemas.enable\": \"false\",\r\n        \"value.converter\": \"org.apache.kafka.connect.json.JsonConverter\",\r\n        \"value.converter.schemas.enable\": \"false\",\r\n        \"key.ignore\": \"true\",\r\n        \"schema.ignore\": \"true\",\r\n        \"transforms\": \"unwrap,key\",\r\n        \"transforms.unwrap.type\": \"io.debezium.transforms.ExtractNewRecordState\",\r\n        \"transforms.unwrap.drop.tombstones\": \"false\",\r\n        \"transforms.key.type\": \"org.apache.kafka.connect.transforms.ExtractField$Key\",\r\n        \"transforms.key.field\": \"id\",\r\n        \"type.name\": \"errorlogs\"\r\n    }\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
